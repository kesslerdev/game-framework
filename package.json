{
  "name": "quarkit",
  "private": true,
  "version": "0.1.1",
  "description": "a set of stamps to compose a complete game",
  "author": "kesslerdev",
  "license": "MIT",
  "repository": "https://gitlab.com/kesslerdev/quarkit",
  "bugs": "https://gitlab.com/kesslerdev/quarkit/issues",
  "scripts": {
    "bootstrap": "oao bootstrap",
    "build": "oao run-script build",
    "generator": "node .scripts/generator.js",
    "clean": "node .scripts/clean.js",
    "start": "oao run-script watch --parallel",
    "test": "oao run-script test",
    "docs:statics": "node .scripts/docs.js",
    "docs:build": "yarn docs:statics && cd docs.src && docker build -t quarkit/docs .",
    "docs": "yarn docs:build && docker run --rm -v $(pwd)/docs.src:/mkdocs quarkit/docs build && cp -r $(pwd)/docs.src/dist $(pwd)/docs",
    "docs:live": "yarn docs:build && docker run --rm  -p '8000:8000' -v $(pwd)/docs.src:/mkdocs quarkit/docs"
  },
  "workspaces": [
    "libs/*",
    "example/*"
  ],
  "devDependencies": {
    "chalk": "^2.4.1",
    "glob": "^7.1.3",
    "oao": "^1.5.1",
    "yo": "^2.0.5"
  },
  "dependencies": {
    "js-yaml": "^3.12.0",
    "rimraf": "^2.6.2"
  }
}
